&lt;span class=&quot;nv&quot;&gt;$ &lt;/span&gt;ZZ &lt;span class=&quot;c&quot;&gt;# save and exit&lt;/span&gt;
&lt;span class=&quot;nv&quot;&gt;$ &lt;/span&gt;:q! &lt;span class=&quot;c&quot;&gt;# discard and exit&lt;/span&gt;


&lt;span class=&quot;nv&quot;&gt;$ &lt;/span&gt;ctrl+f scroll one screen down
&lt;span class=&quot;nv&quot;&gt;$ &lt;/span&gt;ctrl+b scroll one screen back

&lt;span class=&quot;nv&quot;&gt;$ &lt;/span&gt;:%s/oldkeyword/newkeyword/g replace all old keywords to new keywords
&lt;span class=&quot;nv&quot;&gt;$ &lt;/span&gt;:s/oldkeyword/newkeyword/g replace all old keywords to new keywords &lt;span class=&quot;k&quot;&gt;in &lt;/span&gt;current line

&lt;/pre&gt;&lt;/td&gt;&lt;/tr&gt;&lt;/tbody&gt;&lt;/table&gt;&lt;/code&gt;&lt;/pre&gt;&lt;/div&gt;&lt;/div&gt;
</description>
